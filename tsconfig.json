{
  "compilerOptions": {
    "declaration": true,
    "target": "esnext",
    "module": "ESNext",
    "lib": ["DOM"],
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true
  },
  "include": ["src/**/*", "./jest.setup.ts"],
  "exclude": ["node_modules", "dist"]
}